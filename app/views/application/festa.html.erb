<% if @casa == 'beco' || @casa == 'cucko' %>
  <h4>
    Preencha o formul√°rio para adicionar o nome na lista de todas as festas.
  </h4>
  <%= form_tag("/form"+@casa, method: "post") do %>
    <%= label_tag(:nome, "Nome:") %>
    <%= text_field_tag(:nome) %>

    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email) %>

    <% @festas.each do |festa| %>
      <input type="hidden" name="ids[]" value="<%= festa.id %>" />
    <% end %>

    <%= submit_tag("Partiu!") %>
  <% end %>
<% end %>

<hr/>
<% @festas.each do |festa| %>
  <p>
    <%= image_tag festa.image, :size => "182x258" %>
  </p>

  <p>
    <%= festa.name %>
  </p>

  <% if festa.date %>
  <p>
    <%= festa.date %> - <%= festa.hour %>
  </p>
  <% end %>

  <p>
    <%= link_to "+ info", festa.link, :target => "_blank" %>
  </p>
  <hr/>
<% end %>
